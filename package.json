{
  "name": "x_to_telegram_feed",
  "version": "1.0.0",
  "description": "Automatically forwards new posts from an X (Twitter) account to a Telegram channel",
  "type": "module",
  "main": "x_to_telegram.js",
  "bin": {
    "x-to-telegram": "./x_to_telegram.js"
  },
  "scripts": {
    "start": "node x_to_telegram.js",
    "start:once": "node x_to_telegram.js --once",
    "start:dev": "node x_to_telegram.js --interval 60"
  },
  "keywords": ["twitter", "x", "telegram", "bot", "automation", "feed"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.3",
    "grammy": "^1.34.1",
    "twitter-api-v2": "^1.28.0",
    "yargs": "^18.0.0"
  }
}
